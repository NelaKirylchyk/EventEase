@page "/events"
@using EventEase.Models
@using Microsoft.AspNetCore.Components

<PageTitle>Events</PageTitle>
<h1>Events</h1>

<div class="row">
    <div class="col-md-6">
        <div class="events-list">
            @foreach (var e in EventList)
            {
                <div class="mb-3 p-2 border rounded">
                    <div class="d-flex justify-content-between align-items-center">
                        <strong>@e.Name</strong>
                        <div class="btn-group">
                            <NavLink class="btn btn-sm btn-outline-primary" href="@($"/events/{Uri.EscapeDataString(e.Name)}")">Details</NavLink>
                            <NavLink class="btn btn-sm btn-outline-success" href="@($"/register/{Uri.EscapeDataString(e.Name)}")">Register</NavLink>
                        </div>
                    </div>
                    <div class="text-muted">
                        @e.Date.ToString("MMMM dd, yyyy") • @e.Location
                    </div>
                    <div class="mt-2">
                        <EventCard Name="@e.Name" Date="@e.Date" Location="@e.Location" />
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="col-md-6">
        @if (selectedEvent is not null)
        {
            <h2>Edit selected event</h2>
            <EditForm Model="selectedEvent">
                <div class="mb-2">
                    <label for="name">Name</label>
                    <InputText id="name" class="form-control" @bind-Value="selectedEvent.Name" />
                </div>
                <div class="mb-2">
                    <label for="date">Date</label>
                    <InputDate TValue="DateTime" id="date" class="form-control" @bind-Value="selectedEvent.Date" />
                </div>
                <div class="mb-2">
                    <label for="loc">Location</label>
                    <InputText id="loc" class="form-control" @bind-Value="selectedEvent.Location" />
                </div>
            </EditForm>
        }
        else
        {
            <em>Select an event to edit its details.</em>
        }
    </div>
</div>

@code {
    private EventItem? selectedEvent;

    private void SelectEvent(EventItem item) => selectedEvent = item;

    private readonly List<EventItem> EventList =
    [
        new() { Name = "TechConf 2026", Date = new DateTime(2026, 5, 12), Location = "Seattle, WA" },
        new() { Name = "Open Source Summit", Date = new DateTime(2026, 8, 3), Location = "Austin, TX" },
        new() { Name = "Cloud Expo", Date = new DateTime(2026, 10, 21), Location = "New York, NY" }
    ];
}